<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ezen.reply.ReplyService">

<!-- 댓글 입력 -->
<insert id="boardreplyinput">
	insert into reply values(#{param1}, rep_no.nextval, #{param2}, sysdate, #{param3})
</insert>

<select id="boardreplyout" resultType="com.ezen.reply.ReplyDTO">
	select * from reply where rep_originno=#{param1}
</select>

<delete id="boardreplydelete">
	delete from reply where rep_no=#{param1}
</delete>

</mapper>